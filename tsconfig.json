{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2017", "es7", "es6", "dom"],
		"allowJs": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true
	},
	"exclude": ["node_modules", "dist"]
}
